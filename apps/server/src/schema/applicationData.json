{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ApplicationInfo",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "applicantInformation": {
            "$ref": "formData.json"
        },
        "flags": {
            "type": "object",
            "additionalProperties": { "type": "boolean" }
        },
        "status": {
            "type": "string",
            "enum": ["Pending", "Reviewed"]
        }
    },
    "required": ["applicantInformation", "flags", "status"]
}

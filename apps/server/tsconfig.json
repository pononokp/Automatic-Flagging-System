{
    "compilerOptions": {
        "lib": ["es2023"],
        "module": "nodenext",
        "target": "es2022",

        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node16",
        "outDir": "dist",
        "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["../angularjs-app", "node_modules"]
}
